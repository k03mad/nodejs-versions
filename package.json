{
  "name": "@k03mad/nodejs-versions",
  "version": "2.6.0",
  "description": "Get NodeJS versions",
  "maintainers": [
    "Kirill Molchanov <k03.mad@gmail.com"
  ],
  "bin": {
    "nodever": "app/cli.js"
  },
  "main": "app/api.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k03mad/nodejs-versions.git"
  },
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@k03mad/request": "6.3.0",
    "@k03mad/simple-log": "4.2.0",
    "chalk": "5.3.0",
    "table": "6.8.2"
  },
  "devDependencies": {
    "@k03mad/eslint-config": "25.6.4",
    "eslint": "8.57.1",
    "husky": "9.1.6"
  },
  "scripts": {
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint ./ --cache",
    "clean": "rm -rf ./node_modules .eslintcache || true",
    "setup": "npm run clean && npm run setup:pnpm",
    "setup:pnpm": "npm i pnpm -g && pnpm i",
    "prepare": "husky || true"
  }
}
